---
import Layout from "../layouts/Layout.astro";
import CharactersContent from "@/components/shadcn/CharactersContent";
---

<Layout title="Characters" pageTitle="Characters" description="View character information here.">
    <div class="characters-content">
        <CharactersContent client:load/>
    </div>
</Layout>

<style>
    .characters-content {
        min-height: 100vh;
        width: 100%;
        padding-block: 2vh;
        padding-inline: 15vw;
        background-color: #1E1E1E;
        color: white;
    }

    @media screen and (max-width: 639px) {
        .characters-content {
            padding-inline: 10vw;
        }
    }
    
</style>